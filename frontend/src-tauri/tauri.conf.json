{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pomotoro",
  "version": "0.1.0",
  "identifier": "com.pomotoro.dev",
  "build": {
    "frontendDist": "../build/client",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Pomotoro",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
